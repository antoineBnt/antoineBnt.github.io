<section class="about" id="about">
  <article class="about__container">
    <h2 class="about__title">
      <span class="termina__about">A</span>BOUT
      <span class="title__span">ME</span>
    </h2>
    <div class="about__img-container">
      <img
        src="/images/MY.webp"
        alt="Photo de Antoine Brunet etudiant en MMI"
        class="about__img"
      />
    </div>
  </article>
  <div class="about__text-container">
    <div class="about__svg-forme1">
      <img
        src="/images/ABOUT-ROSE.svg"
        alt="forme vectorielle"
